<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFBE3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="10dp"
            android:text="Selamat Datang di Kalkulator Lingkaran"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:fontFamily="casual"
            android:text="lingkaran, yaitu bangun datar yang terbentuk dari himpunan semua titik persekitaran yang mengelilingi suatu titik asal dengan jarak yang sama. jarak tersebut biasanya dinamakan r, atau radius, atau jari-jari."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:text="Luas = 3.14(phi) x jari-jari (r) \n Keliling = 2 x jari-jari x 3.14(phi)"
            android:textColor="#ce7b00"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/lingkaran" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jari-jari : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_jari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan jari-jari"
            android:inputType="number"
            android:textColor="#0d07c9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnhasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HITUNG" />

            <Button
                android:id="@+id/btnreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_kelilinglingkaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text=""
            android:textColor="#7d5a44"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_luaslingkaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text=""
            android:textColor="#7d5a44"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>