<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFBE3"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="10dp"
            android:text="Selamat Datang di Kalkulator Segitiga"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Segitiga, yaitu bangun datar yang terbentuk oleh tiga buah titik yang tidak segaris."
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:text="Luas = 1/2 x alas(b) x tinggi(a)\nKeliling = alas(b) + tinggi(a) + miring(c)"
            android:textColor="#ce7b00"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/segitiga" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Alas : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_alasSegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan nilai alas"
            android:inputType="number"
            android:textColor="#0d07c9" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Tinggi : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_tinggiSegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan nilai tinggi"
            android:inputType="number"
            android:textColor="#0d07c9" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Miring : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_miringSegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan nilai sisi miring"
            android:inputType="number"
            android:textColor="#0d07c9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnhitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HITUNG" />

            <Button
                android:id="@+id/btnreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="resetValue"
                android:text="RESET" />
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:onClick="btnBack"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_luasSegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="15dp"
            android:padding="2dp"
            android:text=""
            android:textColor="#7d5a44"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_kelilingSegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="#7d5a44"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>