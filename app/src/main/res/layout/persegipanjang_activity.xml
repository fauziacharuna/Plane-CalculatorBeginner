<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFBE3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="10dp"
            android:text="Selamat Datang di Kalkulator Persegi Panjang"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_light_background"
            android:fontFamily="casual"
            android:text="Persegi panjang, yaitu bangun datar yang mempunyai sisi berhadapan yang sama panjang, dan memiliki empat buah titik sudut siku-siku"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:text="Luas = panjang(p) x lebar(l) \nKeliling = 2(panjang(p)+lebar(l))"
            android:textColor="#ce7b00"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/persegipanjang" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Panjang : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_sisipersegipanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan nilai panjang"
            android:inputType="number"
            android:textColor="#0d07c9" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Lebar : "
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_sisiLebarPersegiPanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan nilai lebar"
            android:inputType="number"
            android:textColor="#0d07c9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnhasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HITUNG" />

            <Button
                android:id="@+id/btnreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_kelilingPersegiPanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textColor="#7d5a44"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_luasPersegiPanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="15dp"
            android:padding="2dp"
            android:text=""
            android:textColor="#7d5a44"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>